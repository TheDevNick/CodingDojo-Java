package main.java.classes.characters;

import main.java.classes.tools.Die;

public class Troll extends Character {

	public Troll(String name, String description) {
		super(name, Die.roll(5) + 20, 25, 0, Die.roll(3) + 7, description);
		
		this.setDexterity(15 - (5 - (this.getMaxStrength() - this.getStrength())));
	}
}
