package main.java.classes.characters;

import java.awt.Point;
import java.util.Random;

import main.java.classes.food.Food;
import main.java.classes.game.Inventory;

public abstract class Character {

	public String description = "";
	public boolean isAlive = true;
	public Point location = new Point(0, 0);
	public String name;
	public String race;

	public Inventory inventory = new Inventory();

	// getter setters

	public int dexterity;
	public int magic;
	public int maxStrength;
	public int strength;

	//

	public Character(String race, int strength, int maxStrength, int dexterity, int magic, String description) {
		this.race = race;
		this.maxStrength = maxStrength;
		this.strength = strength;
		this.dexterity = dexterity;
		this.magic = magic;
		this.description = description;
	}

	public void reset() {
		this.inventory = new Inventory();
	}
	
	public void consume(Food food) {
		this.
	}

//	public static int rollDie(int numberOfSides) {
//		return new Random().nextInt(numberOfSides) + 1;
//	}
}
