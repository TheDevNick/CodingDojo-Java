package main.java.classes.game;

public abstract class Item {
	
	private String description = "";
	public String name = "";
	public int price = 0;
	public int weight = 0; // grams
	
	public Item() {}
	
	public Item(Item itemToClone) {
		this.description = itemToClone.description;
		this.name = itemToClone.name;
		this.price = itemToClone.price;
		this.weight = itemToClone.weight;
	}
	
	public Item(String name, int weight, int price, String description) {
		
		this.name = name;
		this.weight = weight;
		this.price = price;
		this.description = description;
	}
	
	public String getListingDescription() {
		
		return String.format(
				"name: %s | price: %d gold pieces| weight: %d | description: %s", 
				this.name, this.price, this.weight, this.description
				);
	}
}
