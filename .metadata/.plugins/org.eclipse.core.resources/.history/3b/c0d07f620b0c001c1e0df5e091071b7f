package test.classes;

import main.java.classes.characters.Character;

public class TestCharacter extends Character {
	
	private String race;
	private int strength;
	private int maxStrength;
	private int dexterity;
	private int magic;
	private String description;

	public TestCharacter(String race, int strength, int maxStrength, int dexterity, int magic, String description) {
		super(race, strength, maxStrength, dexterity, magic, description);
		// TODO Auto-generated constructor stub
	}
	
//	getters

	
	public int getStrength() {
		return this.strength;
	}
	
	public int getMaxStrength() {
		return this.maxStrength;
	}
	
	public int getDexterity() {
		return this.dexterity;
	}
	
	public int getMagic() {
		return this.magic;
	}
	

	
	
//	setters
	
	public void setStrength(int strength) {
		if (strength > this.maxStrength) strength = this.maxStrength;
		if (strength < 0) this.strength = 0;
		this.isAlive = strength > 0;//if strength is higher than 0 it is alive
	}
	
	
	public void setMaxStrength(int maxStrength) {
		if (this.maxStrength > 30) maxStrength = 30;
	}
	
	public void 

}
