package magicitems;

import main.java.classes.game.Item;

public class MagicItem extends Item {
	
	public int Damage = 0;
	public int Dexterity = 0;
	public int Magic = 0;
	public int Strength = 0;
	
	public MagicItem(String name, int weight, int price, String description, int damage, int dexterity, int magic, int strength) {
		super(name, weight, price, description);
		this.Dexterity = dexterity;
		this.Magic = magic;
		this.Damage = damage;
		this.Strength = strength;
	}
	
	public MagicItem(Item itemToClone) {
		this.description = itemToClone.description;
		this.name = itemToClone.name;
		this.price = itemToClone.price;
		this.weight = itemToClone.weight;
	}
	
	
}
