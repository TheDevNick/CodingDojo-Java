package magicitems;

import main.java.classes.game.Item;

public class MagicItem extends Item {
	
	public int Damage = 0;
	public int Dexterity = 0;
	public int Magic = 0;
	public int Strength = 0;
	
	public MagicItem(String name, int weight, int price, String description, int damage, int dexterity, int magic, int strength) {
		super(name, weight, price, description);
		this.Dexterity = dexterity;
		this.Magic = magic;
		this.Damage = damage;
		this.Strength = strength;
	}
	
	public MagicItem(MagicItem itemToClone) {
		this.Damage = itemToClone.Damage;
		this.Dexterity = itemToClone.Dexterity;
		this.Magic = itemToClone.Magic;
		this.Strength = itemToClone.Strength;
	}
	
	@Override
	public String getListingDescription() {
		return super.getListingDescription() + String.format(
				" | damage: %d | defense: %d", 
				this.damage, this.defense
				);
	}
	
	
}
