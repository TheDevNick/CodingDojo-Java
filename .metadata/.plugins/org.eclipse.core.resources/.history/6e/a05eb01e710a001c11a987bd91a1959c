package main.java.classes.characters;

public class Sorcerer extends Player {

	public Sorcerer(String description) {
		super("sorcerer", rollDie(5) + 19, 24, 0, rollDie(3) + 2, description);
		
		this.dexterity = 20 - (5 - (this.maxStrength - this.strength));
	}
	private static int rollDie(int i) {
		return i;
	}


}
