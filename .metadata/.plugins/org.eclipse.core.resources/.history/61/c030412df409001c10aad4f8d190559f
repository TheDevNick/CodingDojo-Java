package main.java.classes;

public class Pokemon {
//	Member Variables
	public String Name;
	public int Health =  0;
	public String Type;
	
	public static int count = 0;
	
// Constructors
	public Pokemon(String pokemonName, int pokemonHealth, String pokemonType) {
//		this.Health = pokemonHealth;
		setName(pokemonName);
//		this.Name = pokemonName;
		setHealth(pokemonHealth);
//		this.Type = pokemonType;
		setType(pokemonType);
		count++;
	}
	
//Methods
	void attackPokemon(Pokemon pokemon) {
		pokemon.Health -= 10;
	}
	
// Getters
	public String getName() {
		return Name;
	}
	
	public int getHealth() {
		return Health;
	}
	
	public String getType() {
		return Type;
	}
	
//	Setters
	public void setName(String pokemonName) {
		this.Name = pokemonName;
	}
	
	public void setHealth(int pokemonHealth) {
		this.Health = pokemonHealth;
	}
	
	public void setType(String pokemonType) {
		this.Type = pokemonType;
	}
	
	
}
